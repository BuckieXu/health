}
.articleItemContainer{
    padding: 20rpx;
    width: 100%;
    height: 200rpx;
    display: flex;
    border-bottom: 2rpx solid rgb(229, 229, 229);
}
.articleImgCon{
    width: 40%;
    height: 100%;
}
.articleImg{
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}
.content{
    width: 60%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-left: 20rpx;
}
.articleName{
   font-size: 34rpx;
}
.describe{
    font-size: 26rpx;
    margin-right: 41rpx;
    color: grey;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical; 
}
