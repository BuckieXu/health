page {
    background-color: #F5F5F5;
}

.main {
    padding: 0rpx 0rpx 100rpx;
}

.up {
    width: 100%;
}

.up image {
    width: 100%;
    height: 400rpx;
}

.down {
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx 30rpx;
    margin-top: -50rpx;
    z-index: 9999;
}

.menu {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    padding: 20rpx 10rpx;
    border-radius: 20rpx;
}

.menu .item {
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 180rpx;

}

.menu .item .item-inner {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

}

.menu .item-inner .img {
    padding: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 25rpx;
}

.menu .item-inner .img.bg1 {
    background-color: #F67E65;
}

.menu .item-inner .img.bg2 {
    background-color: #FEB239;
}

.menu .item-inner .img.bg3 {
    background-color: #26CB98;
}

.menu .item-inner .img.bg4 {
    background-color: #48A8F6;
}
.menu .item-inner .bg-orange {
    background-color: orange;
}
.menu .item-inner .bg-pink {
    background-color: pink;
}
.menu .item-inner .bg-grey {
    background-color: grey;
}
.menu .item-inner .bg-brown {
    background-color: brown;
}


.menu .item-inner .img image {
    width: 45rpx;
    height: 45rpx;
}

.menu .item-inner .title {
    margin-top: 20rpx;
    font-size: 29rpx;
    color: #000;
    font-weight: bold;
}

.home-list-box {
    width: 100%;
    margin-bottom: 200rpx;
    margin-top: 20rpx;
}

.home-list-box .comm-list-box {
    padding: 20rpx 0rpx 30rpx 0rpx;
    overflow: unset;
}

/*中部导图片航*/
.cute {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
}

.cute .item {
    width: 48%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cute .item:nth-child(odd) {
    padding: 0 10rpx 20rpx 0;
}


.cute .item:nth-child(even) {
    padding: 0 0rpx 20rpx 10rpx;
}


.cute .item image {
    width: 100%;
    height: 180rpx;
    border-radius: 12rpx;
}

.authen {
    width: 100%;
    margin-top: 30rpx;
    background-color: #f5eedf;
    color: #e9ab4e;
    padding: 18rpx 25rpx;
    border-radius: 35rpx;
}

.board {
    margin-top: 30rpx;
    width: 100%;
    display: flex;
    background-color: #fff;
    border-radius: 10rpx;
}

.board .left {
    padding: 30rpx 10rpx 30rpx 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.board .left image {
    height: 100rpx;
}

.board .mid {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    font-size: 30rpx;
}

.board .mid .line {
    text-align: left;
    padding: 7rpx 0;
}

.board .right {
    width: 40rpx;
    height: inherit;
    display: flex;
    align-items: center;
    color: #bbb;
    font-size: 35rpx;
}

.comm-list-box {
    padding: 20rpx 0rpx 30rpx 0rpx;
}
/*产品列表*/
.block-proList {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    padding: 0 30rpx;
  }
  
  .block-proList .pro-item {
    width: 330rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
  
  }
  
  .block-proList .pro-item:nth-child(2n) {
    margin-right: 0;
  }
  
  .block-proList .pro-item image {
    width: 100%;
    height: 330rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
  }
  
  .block-proList .pro-item .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    color: #333;
  }
  
  .block-proList .pro-item .price {
    font-size: 32rpx;
    color: #ff7600;
  }
/*标题*/
.block-title {
    padding: 26rpx 30rpx;
    background: #fff;
}

.block-title .title-box {
    display: flex;
    align-items: center;
}

.block-title .title-box .title-box-l {
    flex: 1;
    position: relative;
    padding-left: 24rpx;
}

.block-title .title-box .title-box-l text {
    font-size: 34rpx;
    color: #333;
}

.block-title .title-box .title-box-l::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    margin-top: -18rpx;
    display: inline-block;
    width: 8rpx;
    height: 36rpx;
    background: linear-gradient(#219204ea, #10c90aad);
    border-radius: 4rpx;
}

.block-title .title-box .title-box-r text {
    font-size: 28rpx;
    color: #999;
}

.block-newsList {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    padding: 0 30rpx;
    border-top: 1px solid #eee;
}

.block-newsList .news-item {
    display: flex;
    border-bottom: 1px solid #eee;
    padding: 30rpx 0;
}

.block-newsList .news-item:last-child {
    border-bottom: 0;
}

.block-newsList .news-item .news-item-l {
    width: 220rpx;
    margin-right: 20rpx;
}

.block-newsList .news-item .news-item-l image {
    width: 220rpx;
    height: 180rpx;
}

.block-newsList .news-item .news-item-r {
    width: 440rpx;
}

.block-newsList .news-item .news-item-r .title {
    font-size: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #333;
}

.block-newsList .news-item .news-item-r .desc {
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.block-newsList .news-item .news-item-r .time {
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #999;
}

.block-newsList .news-item .news-item-r .time .iconfont {
    font-size: 24rpx;
    margin-right: 10rpx;
}
.publishtime{
    margin-left: 20rpx;
    font-size: 24rpx;
    margin-bottom: 4rpx;
}
/*关于我们*/
.block-about {
    background-color: #fff;
    padding: 30rpx;
    border-top: 1px solid #eee;
    font-size: 28rpx;
    color: #666;
    line-height: 1.5;
}

.block-about text {
    display: inline-block;
    text-indent: 50rpx
}

.block-about image {
    max-width: 100%;
}

/*联系我们*/
.block-contact {
    background-color: #fff;
    padding: 0 30rpx;
    border-top: 1px solid #eee;
}

.block-contact .contact-item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1px solid #eee;
    color: #666;
    font-size: 30rpx;
}

.block-contact .contact-item .contact-item-l {
    width: 50rpx;
    margin-right: 10rpx;
    text-align: center;
}

.block-contact .contact-item .contact-item-l .iconfont {
    font-size: 40rpx;
}

.block-contact .contact-item:last-child {
    border-bottom: 0;
}

.block-contact .contact-item .contact-item-r {
    flex: 1;
}